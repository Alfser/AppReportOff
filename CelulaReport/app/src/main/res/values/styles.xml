<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundTint">@color/secundaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#A3938E</item>
        <!--To support transition -->
        <item name="android:windowActivityTransitions">true</item>
        <!--To support overlay actionBar -->
        <item name="windowActionModeOverlay">true</item>
        
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Toolbar.TitleText.Collapsed_details" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_app</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">casual</item>
    </style>

    <style name="Toolbar.TitleText.Expanded_details" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/details_title_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Toolbar.TitleText.Collapsed_main" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_app</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">casual</item>
    </style>
    <style name="Toolbar.TitleText.Expanded_main" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">monospace</item>
    </style>
    <style name="textInputLayoutOutlineStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="hintTextAppearance">@style/myHintText</item>
        <!--<item name="shapeAppearance">@style/Cut</item>-->
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="myHintText">
        <item name="hintTextColor">@color/text_label</item>
        <item name="android:textColorHint">@color/text_label</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_resp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:textColor">@color/text_resp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">25sp</item>
    </style>

    <style name="report_labels">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/report_labels</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
    </style>

    <!--  Style for report page generated pdf-->
    <style name="text_page_resp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:padding">@dimen/min_padding</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">25sp</item>
    </style>

    <style name="text_commit_page_resp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/max_margin</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:padding">@dimen/min_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="report_page_labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">@dimen/min_padding</item>
    </style>

    <style name="report_page_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_marginStart">@dimen/min_margin</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/report_page_tile</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
