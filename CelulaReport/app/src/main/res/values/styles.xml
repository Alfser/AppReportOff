<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundTint">@color/secundaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To support transition -->
        <item name="android:windowActivityTransitions">true</item>
        <!--To support overlay actionBar -->
        <item name="windowActionModeOverlay">true</item>
        
    </style>

    <style name="Toolbar.TitleText.Collapsed_details" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">casual</item>
    </style>
    <style name="Toolbar.TitleText.Expanded_details" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="Toolbar.TitleText.Collapsed_main" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">casual</item>
    </style>
    <style name="Toolbar.TitleText.Expanded_main" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">monospace</item>
    </style>
    <style name="textInputLayoutOutlineStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="myHintText">
        <item name="hintTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
