<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="@dimen/weight_card"
    android:layout_height="@dimen/height_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/short_report_id"
    android:layout_gravity="center"
    android:layout_margin="@dimen/min_padding"
    app:cardMaxElevation="5dp"
    app:cardCornerRadius="@dimen/cardview_radius"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardBackgroundColor="@color/secondaryColor"
    app:cardPreventCornerOverlap="false"
    >


    <RelativeLayout
        android:id="@+id/card_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imag_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_img_cardview"
            android:contentDescription="@string/visao_celular"
            android:gravity="start|bottom"
            android:scaleType="fitXY"
            android:src="@mipmap/escala_da_visao">

        </ImageView>

        <TextView
            android:id="@+id/card_celula_nome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_img_cardview"
            android:fontFamily="monospace"
            android:gravity="start|bottom"
            android:padding="@dimen/txt_cardview_padding"
            android:text="@string/label_celula"
            android:textColor="@color/card_title_color"
            android:textSize="@dimen/cardview_titleSize" />.


        <TextView
            android:id="@+id/card_lider_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imag_card"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="@dimen/txt_cardview_padding"
            android:text="@string/label_lider"
            android:textColor="@color/text_app"
            android:textSize="@dimen/cardview_textSize" />

        <TextView
            android:id="@+id/card_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_lider_nome"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="@dimen/txt_cardview_padding"
            android:text="@string/data_da_reuinao"
            android:textColor="@color/text_app"
            android:textFontWeight="6"
            android:textSize="@dimen/cardview_textSize"
            tools:targetApi="p" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>