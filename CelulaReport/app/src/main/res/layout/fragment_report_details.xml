<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ReportDetailsFragment"
    android:background="@color/layoutBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleGravity="bottom"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:scrimAnimationDuration="300"
            app:collapsedTitleGravity="left"
            app:expandedTitleMarginStart="25sp"
            app:expandedTitleMarginTop="25sp"
            >

            <ImageView
                android:id="@+id/img_details"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/visao_celular"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@mipmap/escala_da_visao"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

            </ImageView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layoutBackground">

            <LinearLayout
                android:id="@+id/details_linea_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lider_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_lider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_lider"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_lider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/colider_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_colider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_colider"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_colider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/anfitriao_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_anfitriao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_anfitriao"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_anfitriao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/data_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_data"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/membros_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_membros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_membros"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_membros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visitantes_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_visitantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_visitantes"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_visitantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/oferta_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_oferta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_oferta"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                    <TextView
                        android:id="@+id/txt_oferta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/estudo_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_estudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="@dimen/min_padding"
                        android:text="@string/label_estudo"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/min_report_textSize" />

                    <TextView
                        android:id="@+id/txt_estudo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:lines="2"
                        android:maxLines="10"
                        android:padding="@dimen/min_padding"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/report_textSize" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>